    <% if (resultado.IdAutor) {%>
      <input type = "hidden" id="IdNacionalidade" name = "IdNacionalidade" value = "<%= resultado.IdNacionalidade%>">
      <h1>ALTERAR DADOS</h1>
      <form method = "#" action = "/autores/edit/<%= resultado.IdAutor%>" class = "row g-3">
